<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/clrOffwhite"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/clrPink"
                android:gravity="center_horizontal"
                android:text="@string/app_name" />
        </LinearLayout>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:minHeight="40dp" >
        </TableRow>

        <TableRow
            android:id="@+id/TableRow02"
            android:layout_width="fill_parent"
            android:layout_weight="100"
            android:minHeight="80dp" >

            <Button
                android:id="@+id/btnMPreg"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="@drawable/btn_default_normal_blue"
                android:drawableTop="@drawable/preg"
                android:text="1. गर्भवती"
                android:textColor="@color/clrYellow" />

            <Button
                android:id="@+id/btnAncVisit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="@drawable/btn_default_normal_blue"
                android:drawableTop="@drawable/ancvisit"
                android:text="2. ए० एन० सी०"
                android:textColor="@color/clrYellow" />

            <Button
                android:id="@+id/btnMBirth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="@drawable/btn_default_normal_blue"
                android:drawableTop="@drawable/childbirth"
                android:text="3. जन्म"
                android:textColor="@color/clrYellow" />
        </TableRow>

        <TableRow
            android:id="@+id/TableRow01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:minHeight="80dp" >

            <Button
                android:id="@+id/btnMVisit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="@drawable/btn_default_normal_blue"
                android:drawableTop="@drawable/homevisit"
                android:text="4. गृहभ्रमण"
                android:textColor="@color/clrYellow" />

            <Button
                android:id="@+id/btnCouncel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="@drawable/btn_default_normal_blue"
                android:drawableTop="@drawable/counsel"
                android:text="सलाह"
                android:textColor="@color/clrYellow" />

            <Button
                android:id="@+id/btnMLearn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="@drawable/btn_default_normal_blue"
                android:drawableTop="@drawable/selflearn"
                android:text="सीखें"
                android:textColor="@color/clrYellow" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="100"
            android:minHeight="80dp" >

            <Button
                android:id="@+id/btnReport"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="@drawable/btn_default_normal_blue"
                android:drawableTop="@drawable/report"
                android:text="रिपोर्ट"
                android:textColor="@color/clrYellow" />

            <Button
                android:id="@+id/btnDreport"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="@drawable/btn_default_normal_red"
                android:drawableTop="@drawable/death"
                android:text="मृत्यु"
                android:textColor="@color/clrYellow" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="33"
                android:background="@drawable/btn_default_normal_lblue"
                android:drawableTop="@drawable/update"
                android:text="Update" />

        </TableRow>
    </TableLayout>

</LinearLayout>