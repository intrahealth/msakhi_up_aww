<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/clrOffwhite"
        android:orientation="vertical"
        app:context=".Workflow" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:background="#B85C8A"
            android:gravity="center_horizontal"
            android:text="@string/app_name" />

        <Button
            android:id="@+id/btnMPreg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_button_lblue"
            android:text="1. Pregnancy Registration"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnMBirth"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_lblue"
            android:text="2. Birth Registration"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnMVisit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_lblue"
            android:text="3. Home Visits"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnCouncel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_lblue"
            android:text="4. Counseling"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnMLearn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_lblue"
            android:text="5. Self Learning"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnReport"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_lblue"
            android:text="6. Report"
            android:textSize="24dp" />

        <Button
            android:id="@+id/btnDreport"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_button_red"
            android:text="7. Death Registration"
            android:textColor="@color/clrYellow"
            android:textSize="24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>