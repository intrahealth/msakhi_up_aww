<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_footer"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnBack"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
            android:layout_weight="50"
            android:background="@drawable/button_color"
            android:drawableLeft="@drawable/arrow_left_24"
            android:gravity="left|center"
            android:textColor="#ffffff"
            android:text=" पीछे"
            android:drawablePadding="10dp"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="50"
             android:paddingLeft="10dp"
                android:layout_marginRight="10dp"
                   android:layout_marginTop="05dp"
              android:layout_marginBottom="5dp"
             android:drawablePadding="10dp"
           android:background="@drawable/button_color"
            android:drawableLeft="@drawable/arrow_right_24"
            android:gravity="left|center"
         
            android:textColor="#ffffff"
            android:text=" आगे"
            android:textSize="22sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/buttons"
        android:layout_alignParentLeft="true"
        android:background="@drawable/btn_default_normal_lblue"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:orientation="horizontal"
            android:background="#B85C8A" >

            <TextView
                android:id="@+id/tvHead"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="15dp"
                android:textColor="#ffffff"
                android:gravity="center_horizontal|center_vertical"
                android:text="गृहभ्रमण"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvPname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/clrWhite"
                android:text="......"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tvHeadVisits"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:background="@color/clrOffwhite"
                android:text="..."
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSummary"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>