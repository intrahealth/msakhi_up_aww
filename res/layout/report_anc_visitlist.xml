<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/clrOffwhite"
        android:orientation="vertical"
        app:context=".Workflow" >

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#B85C8A"
            android:gravity="center_horizontal"
            android:text="रिपोर्ट"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/custom_button_lblue" >

            <TextView
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="एएनसी 1"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txt1"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/clrGreen"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_lblue" >

            <TextView
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="एएनसी 2"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txt2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/clrGreen"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_lblue" >

            <TextView
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="एएनसी 3"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txt3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/clrGreen"
                android:textSize="24dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tbl4"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custom_button_lblue" >

            <TextView
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="एएनसी 4"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/txt4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:textColor="@color/clrGreen"
                android:textSize="24dp" />
        </TableRow>
    </LinearLayout>

</RelativeLayout>