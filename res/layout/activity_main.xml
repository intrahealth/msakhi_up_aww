<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/clrOffwhite"
    android:orientation="vertical" >

        <ImageView
            android:id="@+id/imgAnc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/imgDescr"
            android:src="@drawable/newborncareh" />

        <TextView
            android:id="@+id/tvEDD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:text="@string/welcome_text"
            android:textColor="@color/backColor1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="10" >

            <EditText
                android:id="@+id/edtPasswd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="45dp"
                android:layout_weight="6"
                android:inputType="textPassword" />

            <ImageButton
                android:id="@+id/btnStart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:contentDescription="Start button"
                android:scaleType="centerInside"
                android:src="@drawable/apply" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvheadLMP"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Default password is : 0000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/clrMGreen"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/slno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/ashaid"
            android:gravity="center_horizontal"
            android:shadowColor="@color/backColor1"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="12"
            android:textColor="@color/clrWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageButton
                android:id="@+id/btnAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_default_normal_lblue"
                android:contentDescription="Start button"
                android:scaleType="centerInside"
                android:src="@drawable/info" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:shadowColor="@color/backColor1"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="Contact: intrahealth@intrahealth.org"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/helpColor" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>