<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />
    <color name="backColor">#F00</color>
    <color name="helpColor">#00F</color>
    <color name="backColor1">#000</color>
    <color name="clrWhite">#FFF</color>
    <color name="clrGreen">#92D050</color>
    <color name="clrOrange">#E26B0A</color>
    <color name="clrPink">#FF66FF</color>
    <color name="clrOffwhite">#DDD</color>
    <color name="clrFooter">#CCC</color>
    <color name="clrDeepGreen">#0F0</color>
    <color name="clrYellow">#FF8</color>
    <color name="clrRed">#F55</color>
    <color name="clrMGreen">#669900</color>
    <color name="clrGrpmsg">#fbbc8b</color>
    <color name="clrQuest">#a8dddf</color>
    
    
    <style name="boldText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="normalText">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#000</item>
    </style>
    
   <style name="Theme.Dialog.Alert" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--item name="android:windowTitleStyle">@android:style/DialogWindowTitle</item-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

   <style name="Widget">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>
    <style name="Scroller">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/slider_back</item>
        <item name="android:layout_margin">3dp</item>
    </style>
   <style parent="@android:style/Widget.Spinner" name="SpinnerAsEditText">
       <item name="android:background">@android:drawable/edit_text</item>

</style>
</resources>